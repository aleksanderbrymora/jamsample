<h1><%= @collection.name %> Collection</h1>

<% if flash[:error].present? %>
  <h3><%= flash[:error] %></h3>
<% end %>

<% @collection.samples.each do |sample| %>
  <p><%= sample.title %></p>
<% end %>

<div class="collection_controls">
  <%= link_to "Back", collections_path %>
  <%= link_to "Edit Collection", edit_collection_path(@collection) %>
  <%= link_to "Delete Collection", @collection, :method => 'delete' %>
</div>
