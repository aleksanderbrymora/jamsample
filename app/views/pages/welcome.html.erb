<h1>Marketplace</h1>

<% @samples.each do |sample| %>
  <%= link_to image_tag(sample.image, :class => 'feature', :alt => "#{sample.title}"), sample %>
  <p><%= link_to sample.title, sample %></p>
  <p><%= link_to sample.collection.name, sample.collection %></p>
  <p>Created At: <%= sample.created_at.strftime '%l:%M %P, %B %e, %Y' %></p>
<% end %>
