<%= form_for(@sample, :html => {:multipart => true})do |f| %>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :audio_file %>
    <%= f.url_field :audio_file, :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :image %>
    <%= f.cl_image_upload :image %>
  </fieldset>

  <fieldset>
    <%= f.label :sample_type %>
    <%= f.select :sample_type, options_for_select(["Loop", "Riff", "Lyrics"]), :include_blank => true %>
  </fieldset>

  <fieldset>
    <%= f.label :collection_id %>
    <%= f.select :collection_id, @collections.pluck(:name, :id), :include_blank => true %>
  </fieldset>

  <fieldset>
    <% Genre.all.each do |genre| %>
      <%= check_box_tag "sample[genre_ids][]", genre.id, @sample.genre_ids.include?(genre.id), id: dom_id(genre) %>
      <%= label_tag dom_id(genre), genre.name %><br>
    <% end %>
  </fieldset>

  <%= f.submit %>
<% end %>
