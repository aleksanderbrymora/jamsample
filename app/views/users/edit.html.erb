<h1>Settings</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :class => 'form-control' %>
  </div>

  <div class="form-group>
    <%= f.label :email %>
    <%= f.text_field :email, :required => true, :class => 'form-control' %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>
