<h1>Settings</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :email %>
    <%= f.text_field :email, :required => true %>
  </fieldset>

  <%= f.submit %>
<% end %>
